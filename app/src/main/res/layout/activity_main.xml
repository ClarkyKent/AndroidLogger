<?xml version="1.0" encoding="utf-8"?>
<!-- Parent linear layout with vertical orientation -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="Sampling Rate:" android:padding="5dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="40dp">

        <RadioGroup
            android:id="@+id/SamplingOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checkedButton="@id/fast"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/fast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fast"
                />
            <RadioButton
                android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Normal"
                />
            <RadioButton
                android:id="@+id/slow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Slow"
                />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="40dp">

        <Button android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:id="@+id/Break"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:onClick="sendMessageBrake"
            android:enabled="false"
            android:text="Break"/>

        <Button android:layout_width="wrap_content"
            android:layout_margin="1dp"
            android:id="@+id/Acceleration"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:onClick="sendMessageAcc"
            android:enabled="false"
            android:text="Acceleration"/>

        <Button android:layout_width="wrap_content"
            android:id="@+id/Aggressive_steering"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:onClick="sendMessageSteer"
            android:enabled="false"
            android:text="Aggressive steering"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_height="40dp">

        <Button android:layout_width="fill_parent"
            android:id="@+id/button_start"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <Button android:layout_width="fill_parent"
            android:id="@+id/button_stop"
            android:layout_height="wrap_content"
            android:text="Stop"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="hey1"
            android:id="@+id/display_gps_latitude"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="hey2"
            android:id="@+id/display_gps_longitude"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="hey3"
            android:id="@+id/display_gps_accuracy"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="hey4"
            android:id="@+id/display_gps_extra"
            />
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:text="hey5"
            android:id="@+id/display_gps_updated"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="hey5"
            android:padding="5dp"
            android:id="@+id/display_gps_status_enabled"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="hey5"
            android:padding="5dp"
            android:id="@+id/display_gps_status"
            />
    </LinearLayout>

</LinearLayout>

